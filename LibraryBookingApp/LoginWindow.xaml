<Window x:Class="LibraryBookingApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryBookingApp"
        mc:Ignorable="d"
      Title="Library Login" Height="400" Width="300" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Вход в библиотеку" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин"/>
            <TextBox Name="UsernameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Пароль"/>
            <PasswordBox Name="PasswordBox" Margin="0,5,0,20"/>

            <Button Content="Войти" Click="LoginButton_Click" Height="30"/>
            <Button Content="Регистрация" Click="RegisterButton_Click" Height="30" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>