<Window x:Class="LibraryBookingApp.Pages.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryBookingApp.Pages"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="TitleTextBox" Text="Название" Margin="0,0,0,5" Height="25"/>
            <TextBox x:Name="AuthorTextBox" Text="Автор" Margin="0,0,0,5" Height="25"/>
            <TextBox x:Name="GenreTextBox" Text="Жанр" Margin="0,0,0,5" Height="25"/>
            <TextBox x:Name="QuantityTextBox" Text="Количество" Margin="0,0,0,10" Height="25"/>
            <Button Content="Добавить" Click="AddBook_Click" HorizontalAlignment="Center" Width="100" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
