<Window x:Class="LibraryBookingApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryBookingApp"
        mc:Ignorable="d"
      Title="Регистрация" Height="600" Width="300">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <StackPanel Margin="20">
            <TextBlock Text="Регистрация" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин"/>
            <TextBox Name="RegUsernameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Пароль"/>
            <PasswordBox Name="RegPasswordBox" Margin="0,5,0,20"/>

                <TextBlock Text="Фамилия" Margin="0,0,0,5"/>
                <TextBox x:Name="LastNameTextBox" Margin="0,0,0,10"/>
                <TextBlock Text="Имя" Margin="0,0,0,5"/>
                <TextBox x:Name="FirstNameTextBox" Margin="0,0,0,10"/>
                <TextBlock Text="Отчество" Margin="0,0,0,5"/>
                <TextBox x:Name="MiddleNameTextBox" Margin="0,0,0,10"/>
                <TextBlock Text="Номер читательского билета" Margin="0,0,0,5"/>
                <TextBox x:Name="ReaderNumberTextBox" Margin="0,0,0,10"/>
                <TextBlock Text="Адрес" Margin="0,0,0,5"/>
                <TextBox x:Name="AddressTextBox" Margin="0,0,0,10"/>
                <TextBlock Text="Номер телефона" Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneNumberTextBox" Margin="0,0,0,10"/>

                <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Height="30"/>
            <Button Content="Назад" Click="BackButton_Click" Height="30" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>